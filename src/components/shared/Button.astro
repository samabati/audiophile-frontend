---
interface Props {
  background: string;
  text: string;
  textColor?: string;
  border?: string;
}

const { background, text, textColor = "color-p-w", border = "" } = Astro.props;
---

<button
  class=`color-p-w font-s-13 bold font-ls-1 p-t-15 p-b-15 p-r-30 p-l-30 ${background} ${textColor} ${border}`
  >{text}</button
>
