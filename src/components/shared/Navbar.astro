---
import { Image } from "astro:assets";
import hamburger from "../../assets/home/hamburger.svg";
import logo from "../../assets/home/logo.svg";
import cart from "../../assets/home/cart.svg";
---

<nav class="w-100 flex align-c just-s-b">
  <div>
    <button id="hamburger">
      <Image src={hamburger} alt="hamburger" />
    </button>
    <a href="/" id="logo">
      <Image src={logo} alt="logo" class="logo" />
    </a>
  </div>

  <section class="flex">
    <a class="color-p-w font-s-13 bold font-lh-25 font-ls-2" href="/">HOME</a>
    <a class="color-p-w font-s-13 bold font-lh-25 font-ls-2" href="/headphones"
      >HEADPHONES</a
    >
    <a class="color-p-w font-s-13 bold font-lh-25 font-ls-2" href="/speakers"
      >SPEAKERS</a
    >
    <a class="color-p-w font-s-13 bold font-lh-25 font-ls-2" href="/earphones"
      >EARPHONES</a
    >
  </section>

  <button id="cart">
    <Image src={cart} alt="cart" />
  </button>
</nav>

<style>
  nav {
    position: relative;
    z-index: 2;
    padding-top: 35px;
    padding-bottom: 35px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.25);
  }
  section {
    gap: 34px;
  }

  #hamburger {
    display: none;
  }

  #logo {
    padding: 0px;
  }

  #cart {
    width: 23px;
    padding: 0px;
  }

  /* Tablet */
  @media (max-width: 58.25rem) {
    nav {
      padding-top: 32px;
      padding-bottom: 32px;
    }
    section {
      display: none;
    }

    #hamburger {
      display: block;
      padding: 0;
      width: 23px;
    }

    div {
      display: flex;
      gap: 42px;
    }
  }

  /* Mobile */
  @media (max-width: 30rem) {
    div {
      gap: 0px;
      justify-content: space-between;
      width: 100%;
    }
    #logo,
    .logo {
      margin: auto;
    }
  }
</style>
