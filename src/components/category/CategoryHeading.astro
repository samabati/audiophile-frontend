---
import type { Category } from "../../types/enums/Category";

interface Props {
  category: Category;
}

const { category } = Astro.props;
---

<header class="flex just-c align-c p-t-98 p-b-98">
  <h1 class="color-p-w font-s-40 bold font-lh-44 font-ls-1429">
    {category.toUpperCase()}
  </h1>
</header>

<style>
  /* Mobile */
  @media (max-width: 30rem) {
    h1 {
      font-size: 2.8rem;
      line-height: normal;
      letter-spacing: 2px;
    }
    header {
      padding-top: 32px;
      padding-bottom: 32px;
      line-height: normal;
    }
  }
</style>
