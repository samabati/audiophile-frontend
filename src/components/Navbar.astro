---
import { Image } from "astro:assets";
import logo from "../assets/home/logo.svg";
import cart from "../assets/home/cart.svg";
---

<nav class="w-100 flex align-c just-s-b">
  <Image src={logo} alt="logo" />

  <section class="flex">
    <a class="color-p-w font-s-13 bold font-lh-25 font-ls-2" href="/home"
      >HOME</a
    >
    <a class="color-p-w font-s-13 bold font-lh-25 font-ls-2" href="/headphones"
      >HEADPHONES</a
    >
    <a class="color-p-w font-s-13 bold font-lh-25 font-ls-2" href="/speakers"
      >SPEAKERS</a
    >
    <a class="color-p-w font-s-13 bold font-lh-25 font-ls-2" href="/earphones"
      >EARPHONES</a
    >
  </section>

  <button>
    <Image src={cart} alt="cart" />
  </button>
</nav>

<style>
  nav {
    position: relative;
    z-index: 2;
    padding-top: 35px;
    padding-bottom: 35px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.25);
  }
  section {
    gap: 34px;
  }
</style>
