---
/* Background Component
  This component wraps components to ensure consistent padding on the left and right across all components
  By centralizing padding in this component, it helps maintain a uniform layout and spacing throughout the app.

  Props:
  - className (string): allows parent component to specify background color and padding, margin etc.
*/

interface Props {
  className: string;
}
const { className } = Astro.props;
---

<div class=`outter-container ${className}`>
  <div class="inner-container">
    <slot />
  </div>
</div>

<style>
  .outter-container {
    padding-left: 11.81%;
    padding-right: 11.81%;
    width: 100%;
  }
  .inner-container {
    width: 100%;
    max-width: 110rem;
    margin-left: auto;
    margin-right: auto;
  }

  /* Tablet */
  @media (max-width: 58.25rem) {
    .outter-container {
      padding-left: 5.21%;
      padding-right: 5.21%;
    }
  }

  /* Mobile */
  @media (max-width: 30rem) {
    .outter-container {
      padding-left: 6.4%;
      padding-right: 6.4%;
    }
  }
</style>
