---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-j-b">
    <div class="container w-100">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap");
  /* CSS RESET */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }
  * {
    margin: 0;
  }
  body {
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
  }
  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
  }
  input,
  button,
  textarea,
  select {
    font: inherit;
  }
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
  }
  #root,
  #__next {
    isolation: isolate;
  }
  html {
    font-size: 62.5%;
    height: 100%;
    font-family: "Manrope";
    font-weight: 400;
  }
  body {
    height: 100%;
  }
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  input {
    outline: none;
    border: none;
  }
  button {
    background: none;
    border-style: none;
    cursor: pointer;
  }
  input:-webkit-autofill,
  input:-webkit-autofill:hover,
  input:-webkit-autofill:focus,
  textarea:-webkit-autofill,
  textarea:-webkit-autofill:hover,
  textarea:-webkit-autofill:focus,
  select:-webkit-autofill,
  select:-webkit-autofill:hover,
  select:-webkit-autofill:focus {
    -webkit-box-shadow: 0 0 0px 1000px #ffffff inset !important;
  }
  a {
    color: inherit;
    text-decoration: none;
    background-color: transparent;
    cursor: pointer;
  }
  a:visited {
    color: inherit;
  }
  a:focus,
  a:active {
    outline: none;
  }

  /* Utility classes */

  body {
    padding-left: 11.81%;
    padding-right: 11.81%;
  }

  .container {
    max-width: 1100px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Flex-box */
  .flex {
    display: flex;
  }

  .align-c {
    align-items: center;
  }

  .just-c {
    justify-content: center;
  }

  .just-s-b {
    justify-content: space-between;
  }

  /* Width && Height */
  .w-100 {
    width: 100%;
  }
  .h-100 {
    height: 100%;
  }

  .max-w-1100 {
    max-width: 1100px;
  }

  /* Outline */
  .outline {
    outline: 2px solid red;
  }

  /* Fonts */
  .font-s-13 {
    font-size: 1.3rem;
  }

  .font-s-14 {
    font-size: 1.4rem;
  }

  .font-s-15 {
    font-size: 1.5rem;
  }

  .font-s-56 {
    font-size: 5.6rem;
  }

  .font-lh-25 {
    line-height: 25px;
  }

  .font-lh-58 {
    line-height: 58px;
  }

  .bold {
    font-weight: 700;
  }

  .font-ls-1 {
    letter-spacing: 1px;
  }

  .font-ls-2 {
    letter-spacing: 2px;
  }

  .font-ls-10 {
    letter-spacing: 10px;
  }

  /* Colors */
  :root {
    --copper: #d87d4a;
    --jet-black: #101010;
    --soft-gray: #f1f1f1;
    --snow-white: #fafafa;
    --peach: #fbaf85;
    --pure-white: #ffffff;
    --black: #000000;
  }

  .color-c {
    color: var(--copper);
  }
  .color-j-b {
    color: var(--jet-black);
  }
  .color-s-w {
    color: var(--snow-white);
  }
  .color-p {
    color: var(--peach);
  }
  .color-p-w {
    color: var(--pure-white);
  }
  .color-b {
    color: var(--black);
  }

  .bg-c {
    background-color: var(--copper);
  }
  .bg-j-b {
    background-color: var(--jet-black);
  }
  .bg-s-w {
    background-color: var(--snow-white);
  }
  .bg-p {
    background-color: var(--peach);
  }
  .bg-p-w {
    background-color: var(--pure-white);
  }
  .bg-b {
    background-color: var(--black);
  }

  /* Margin top */
  .m-t-24 {
    margin-top: 24px;
  }
  .m-r-24 {
    margin-right: 24px;
  }
  .m-b-24 {
    margin-bottom: 24px;
  }
  .m-l-24 {
    margin-left: 24px;
  }

  .m-t-40 {
    margin-top: 40px;
  }
  .m-r-40 {
    margin-right: 40px;
  }
  .m-b-40 {
    margin-bottom: 40px;
  }
  .m-l-40 {
    margin-left: 40px;
  }

  /* Padding */
  .p-t-15 {
    padding-top: 15px;
  }
  .p-r-15 {
    padding-right: 15px;
  }
  .p-b-15 {
    padding-bottom: 15px;
  }
  .p-l-15 {
    padding-left: 15px;
  }

  .p-t-30 {
    padding-top: 30px;
  }
  .p-r-30 {
    padding-right: 30px;
  }
  .p-b-30 {
    padding-bottom: 30px;
  }
  .p-l-30 {
    padding-left: 30px;
  }
</style>
