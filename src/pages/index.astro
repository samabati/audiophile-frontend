---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/shared/Navbar.astro";
import Hero from "../components/home/Hero.astro";
import Background from "../layouts/Background.astro";
import ProductsList from "../components/shared/ProductsList.astro";
import ZX9SpeakerHome from "../components/home/ZX9SpeakerHome.astro";
import ZX7SpeakerHome from "../components/home/ZX7SpeakerHome.astro";
import YX1EarphonesHome from "../components/home/YX1EarphonesHome.astro";
import TextImageSplit from "../components/shared/TextImageSplit.astro";
import Footer from "../components/shared/Footer.astro";
---

<Layout title="Welcome to Astro.">
  <Background className="bg-h">
    <Navbar />
    <Hero />
  </Background>
  <Background className="bg-s-w homepage-padding">
    <ProductsList />
    <ZX9SpeakerHome />
    <ZX7SpeakerHome />
    <YX1EarphonesHome />
    <TextImageSplit className="text-image-split-home-margin" />
  </Background>
  <Background className="bg-j-b"><Footer /></Background>
</Layout>

<style is:global>
  .homepage-padding {
    padding-top: 120px;
    padding-bottom: 200px;
  }
  .text-image-split-home-margin {
    margin-top: 200px;
  }

  /* Tablet */
  @media (max-width: 58.25rem) {
    .homepage-padding {
      padding-top: 100px;
      padding-bottom: 100px;
    }
    .text-image-split-home-margin {
      margin-top: 96px;
    }
  }

  /* Mobile */
  @media (max-width: 30rem) {
    .homepage-padding {
      padding-top: 40px;
      padding-bottom: 120px;
    }

    .text-image-split-home-margin {
      margin-top: 120px;
    }
  }
</style>
