---
import Background from "../../layouts/Background.astro";
import Navbar from "../../components/shared/Navbar.astro";
import Layout from "../../layouts/Layout.astro";
import ProductCard from "../../components/shared/ProductCard.astro";
import ProductFeatures from "../../components/shared/ProductFeatures.astro";
import ProductImageGallery from "../../components/shared/ProductImageGallery.astro";
import ProductRecommendation from "../../components/shared/ProductRecommendation.astro";
import ProductsList from "../../components/shared/ProductsList.astro";
import TextImageSplit from "../../components/shared/TextImageSplit.astro";
import Footer from "../../components/shared/Footer.astro";
---

<Layout title="Product">
  <Background className="bg-b">
    <Navbar />
  </Background>
  <Background className="bg-s-w products-background-padding">
    <ProductCard />
    <ProductFeatures />
    <ProductImageGallery />
    <ProductRecommendation />
    <ProductsList className="products-products-list" />
    <TextImageSplit className="products-text-image-split" />
  </Background>
  <Background className="bg-j-b">
    <Footer />
  </Background>
</Layout>

<style is:global>
  .products-products-list,
  .products-text-image-split {
    margin-top: 160px;
  }

  .products-background-padding {
    padding-bottom: 160px;
  }

  /* Tablet */
  @media (max-width: 58.25rem) {
    .products-products-list,
    .products-text-image-split {
      margin-top: 120px;
    }

    .products-background-padding {
      padding-bottom: 120px;
    }
  }
</style>
